<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    app:cardElevation="10dp"
    android:layout_marginTop="10dp"
    app:cardBackgroundColor="@color/post_event_card_color"
    app:layout_constraintHeight_percent="0.3">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top_layout"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_imageview"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/iron_man"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:id="@+id/name_tv"
                android:text="Narendra Singh Aanjna"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                android:maxLength="25"
                android:ellipsize="end"
                android:layout_marginTop="-5dp"
                app:layout_constraintStart_toEndOf="@id/profile_imageview"
                app:layout_constraintTop_toTopOf="@id/profile_imageview"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/time_tv"
                android:text="0 seconds ago"
                android:textColor="@color/text_hint_color"
                android:textSize="15sp"
                android:maxLength="25"
                android:ellipsize="end"
                app:layout_constraintTop_toBottomOf="@id/name_tv"
                app:layout_constraintStart_toStartOf="@id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/menu_btn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:src="@drawable/ic_baseline_more_vert_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/text_color"
                app:layout_constraintBottom_toBottomOf="@id/line"
                android:layout_marginEnd="10dp"
                />

            <View
                android:id="@+id/line"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/profile_imageview"
                android:background="@color/text_color"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/second_layout"
            app:layout_constraintTop_toBottomOf="@id/top_layout"
            >
            <TextView
                android:id="@+id/desc_tv"
                android:textColor="@color/text_color"
                android:text="your thougths..."
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/images_rv"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="10dp"
                android:maxLength="500"
                android:lines="3"
                android:visibility="gone"
                android:ellipsize="end"
                android:textSize="15sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/images_rv"
                android:layout_width="0dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/desc_tv"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/line2"
                android:layout_marginTop="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/text_color"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/third_layout"
            app:layout_constraintTop_toBottomOf="@id/second_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/like_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="10dp"
                android:src="@drawable/heart_unfill"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/like_tv"
                app:layout_constraintStart_toEndOf="@id/like_btn"
                app:layout_constraintTop_toTopOf="@id/like_btn"
                app:layout_constraintBottom_toBottomOf="@id/like_btn"
                android:layout_marginStart="5dp"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/comment_btn"
                app:layout_constraintStart_toEndOf="@id/like_tv"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="10dp"
                android:src="@drawable/comment"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="26dp"
                android:layout_height="26dp"/>
            <TextView
                android:id="@+id/comment_tv"
                app:layout_constraintStart_toEndOf="@id/comment_btn"
                app:layout_constraintTop_toTopOf="@id/comment_btn"
                app:layout_constraintBottom_toBottomOf="@id/comment_btn"
                android:layout_marginStart="5dp"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/visible_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="10dp"
                android:src="@drawable/visible"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="26dp"
                android:layout_height="26dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>