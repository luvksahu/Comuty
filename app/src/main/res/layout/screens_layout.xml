<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <TextView 
        android:id="@+id/txt1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/img1"
        android:textColor="@color/text_color"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center_vertical"
        android:text="friends\n      and\n         colleagues"
        android:layout_width="wrap_content"
        app:layout_constraintHorizontal_bias="0.3"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.2"
        />
    <ImageView
        android:id="@+id/img1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.5"
        android:src="@drawable/screen1"
        app:layout_constraintBottom_toTopOf="@id/txt2"
        app:layout_constraintTop_toBottomOf="@id/txt1"
        />
    <TextView 
        android:id="@+id/txt2"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img1"
        app:layout_constraintBottom_toTopOf="@id/txt3"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        android:text="See who else is here\nand search for them\nwho have the same skills"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.2"/>
    <TextView 
        android:id="@+id/txt3"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        android:text="⚫⚪⚪⚪"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.1"/>


</androidx.constraintlayout.widget.ConstraintLayout>