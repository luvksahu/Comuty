<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".onboarding.ui.fragments.RegisterFragment_2">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.07"
        >


        <ImageView
            android:id="@+id/backBTN"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/indexTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2/2"
            android:textColor="@color/text_color"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/topLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:lottie_rawRes="@raw/searching_for_profile"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/txt1"
            android:text="Enter your college details"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/text_color"
            app:layout_constraintTop_toBottomOf="@id/animationView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="College*"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="bottom"
            app:layout_constraintTop_toBottomOf="@id/txt1"
            app:layout_constraintStart_toStartOf="@id/college_name_TV"
            />

        <TextView
            android:id="@+id/college_name_TV"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt2"
            android:textColor="@color/text_color"
            android:textSize="20sp"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:text="Indore Intitute of Science &amp; Tech..."
            android:drawableTint="@color/text_color"
            android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
            android:drawableLeft="@drawable/college"
            android:drawablePadding="20dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Branch*"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="bottom"
            app:layout_constraintTop_toBottomOf="@id/college_name_TV"
            app:layout_constraintStart_toStartOf="@id/branch_TV"
            />

        <TextView
            android:id="@+id/branch_TV"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt3"
            android:textColor="@color/text_color"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:text="Computer Science Engineering"
            android:drawableTint="@color/text_color"
            android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
            android:drawableLeft="@drawable/branch"
            android:drawablePadding="20dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year*"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="bottom"
            app:layout_constraintTop_toBottomOf="@id/branch_TV"
            app:layout_constraintStart_toStartOf="@id/year_TV"
            />

        <TextView
            android:id="@+id/year_TV"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="@id/branch_TV"
            app:layout_constraintTop_toBottomOf="@id/txt4"
            app:layout_constraintEnd_toStartOf="@id/section_TV"
            android:textColor="@color/text_color"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:text="1"
            android:drawableTint="@color/text_color"
            android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
            android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
            android:drawablePadding="20dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Section"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="bottom"
            app:layout_constraintTop_toBottomOf="@id/branch_TV"
            app:layout_constraintStart_toStartOf="@id/section_TV"
            />

        <TextView
            android:id="@+id/section_TV"
            android:layout_width="0dp"
            app:layout_constraintStart_toEndOf="@id/year_TV"
            app:layout_constraintEnd_toEndOf="@id/branch_TV"
            app:layout_constraintTop_toBottomOf="@id/txt4"
            android:textColor="@color/text_color"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center"
            android:text="CS-2"
            android:drawableTint="@color/text_color"
            android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
            android:drawableLeft="@drawable/sections"
            android:drawablePadding="20dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enrollment"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="bottom"
            app:layout_constraintTop_toBottomOf="@id/year_TV"
            app:layout_constraintStart_toStartOf="@id/enrollmentED"
            />

        <EditText
            android:id="@+id/enrollmentED"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt6"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_hint_color"
            android:hint="aaajdsfdaksjgde"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:inputType="textPersonName"
            android:drawableTint="@color/text_color"
            android:drawableLeft="@drawable/id_card"
            android:drawablePadding="20dp"
            android:backgroundTint="@color/text_color"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Graduation Year"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="bottom"
            app:layout_constraintTop_toBottomOf="@id/enrollmentED"
            app:layout_constraintStart_toStartOf="@id/graduation_year_TV"
            />

        <TextView
            android:id="@+id/graduation_year_TV"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt7"
            android:textColor="@color/text_color"
            android:textSize="20sp"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:gravity="center"
            android:text="2023"
            android:drawableTint="@color/text_color"
            android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
            android:drawableLeft="@drawable/graduation"
            android:drawablePadding="20dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt8"
            android:text="* is mandatory"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@id/graduation_year_TV"
            app:layout_constraintTop_toBottomOf="@id/graduation_year_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/submitBTN"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.4"
            android:text="Submit"
            android:textAllCaps="false"
            android:gravity="center"
            android:textColor="@color/text_color"
            android:textSize="22sp"
            android:backgroundTint="@color/button_bg1"
            android:elevation="10dp"
            app:elevation="10dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt8"
            app:icon="@drawable/ic_baseline_done_24"
            app:iconGravity="end"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <include layout="@layout/country_code_layout" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</FrameLayout>