<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".onboarding.ui.fragments.IntroScreensFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationVie2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:lottie_rawRes="@raw/bubbles3"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/bottomLayout"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:fontFamily="@font/kalam"
            android:id="@+id/skipbtn"
            android:text="skip"
            android:visibility="gone"
            android:textColor="@color/text_color"
            android:textSize="20sp"
            android:layout_margin="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintTop_toBottomOf="@id/view_pager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/beginButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.35"
                app:layout_constraintWidth_percent="0.4"
                app:cardBackgroundColor="@color/button_bg1"
                app:rippleColor="@color/white"
                android:clickable="true"
                android:layout_gravity="center"
                app:cardCornerRadius="30dp"
                android:elevation="10dp"
                app:cardElevation="10dp"
                app:cardMaxElevation="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView android:fontFamily="@font/kalam"
                        android:id="@+id/one"
                        android:text="Begin"
                        android:textColor="@color/text_color"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:gravity="center|end"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/two"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.6"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:id="@+id/two"
                        android:src="@drawable/arrow_right_1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:scaleX="0.6"
                        android:scaleY="0.6"
                        app:layout_constraintStart_toEndOf="@id/one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/startButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.35"
                app:layout_constraintWidth_percent="0.4"
                app:cardBackgroundColor="@color/button_bg1"
                app:rippleColor="@color/white"
                android:clickable="true"
                android:visibility="gone"
                android:layout_gravity="center"
                app:cardCornerRadius="30dp"
                android:elevation="10dp"
                app:cardElevation="10dp"
                app:cardMaxElevation="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView android:fontFamily="@font/kalam"
                        android:id="@+id/one1"
                        android:text="Start"
                        android:textColor="@color/text_color"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:gravity="center|end"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/two2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.5"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:id="@+id/two2"
                        android:src="@drawable/run_img"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/one1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/nextBTN"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="30dp"
                android:visibility="gone"
                android:backgroundTint="@color/button_bg1"
                app:borderWidth="0dp"
                android:src="@drawable/arrow_right_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/prevBTN"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:rotation="180"
                android:visibility="gone"
                android:layout_marginStart="30dp"
                android:backgroundTint="@color/button_bg1"
                app:borderWidth="0dp"
                android:src="@drawable/arrow_right_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>