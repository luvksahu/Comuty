<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_nav"
    app:startDestination="@id/exploreFragment">

    <fragment
        android:id="@+id/exploreFragment"
        android:name="com.nsa.comuty.home.ui.ExploreFragment"
        android:label="fragment_explore"
        tools:layout="@layout/fragment_explore" >
        <action
            android:id="@+id/action_exploreFragment_to_eventFragment"
            app:destination="@id/eventFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_right"
            app:popExitAnim="@anim/bottom_to_top"
            />
    </fragment>
    <fragment
        android:id="@+id/chatsFragment"
        android:name="com.nsa.comuty.home.ui.ChatsFragment"
        android:label="fragment_chats"
        tools:layout="@layout/fragment_chats" >
        <action
            android:id="@+id/action_chatsFragment_to_friendsFragment"
            app:destination="@id/friendsFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_right"
            app:popExitAnim="@anim/bottom_to_top"
            />
    </fragment>
    <fragment
        android:id="@+id/eventFragment"
        android:name="com.nsa.comuty.home.ui.EventFragment"
        android:label="fragment_event"
        tools:layout="@layout/fragment_event" >
        <action
            android:id="@+id/action_eventFragment_to_chatsFragment"
            app:destination="@id/chatsFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_right"
            app:popExitAnim="@anim/bottom_to_top"
            />
    </fragment>
    <fragment
        android:id="@+id/friendsFragment"
        android:name="com.nsa.comuty.home.ui.MoreFragment"
        android:label="fragment_friends"
        tools:layout="@layout/fragment_more" />
</navigation>